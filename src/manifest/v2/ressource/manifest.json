{
    "manifest_version": 2,

    "name": "Manifest V2 Extension",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "icon/icon16.png",
        "default_popup": "html/popup.html"
    },

    "permissions": [
        "webRequest",
        "http://*/",
        "https://*/"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "icons": {
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    }
}
